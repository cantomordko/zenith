<div class="modal fade" id="membersModal" tabindex="-1" aria-labelledby="membersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="membersModalLabel">Członkowie tablicy</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zamknij"></button>
            </div>
            <div class="modal-body">
                <form id="member-form" class="mb-4">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-6">
                            <label for="member-email" class="form-label">Adres e-mail użytkownika</label>
                            <input type="email" class="form-control" id="member-email" name="email" placeholder="uzytkownik@example.com" required>
                        </div>
                        <div class="col-md-4">
                            <label for="member-role" class="form-label">Rola</label>
                            <select class="form-select" id="member-role" name="role">
                                <option value="member">Członek</option>
                                <option value="admin">Administrator</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                Dodaj
                            </button>
                        </div>
                    </div>
                    <div class="alert alert-danger mt-3 d-none" id="member-error"></div>
                </form>

                <h6 class="fw-semibold">Aktualni członkowie</h6>
                <ul class="list-group" id="member-list">
                    {% if boardData.members is not empty %}
                        {% for member in boardData.members %}
                            <li class="list-group-item d-flex align-items-center justify-content-between" data-user-id="{{ member.id }}">
                                <div>
                                    <div class="fw-semibold">{{ member.displayName }}</div>
                                    <div class="small">
                                        {% if member.role == 'owner' %}
                                            <span class="badge role-badge role-owner">Właściciel</span>
                                        {% elseif member.role == 'admin' %}
                                            <span class="badge role-badge role-admin">Administrator</span>
                                        {% else %}
                                            <span class="badge role-badge role-member">Członek</span>
                                        {% endif %}
                                    </div>
                                </div>
                                {% if member.role != 'owner' %}
                                    <button class="btn btn-outline-danger btn-sm" data-action="remove-member" data-user-id="{{ member.id }}">Usuń</button>
                                {% endif %}
                            </li>
                        {% endfor %}
                    {% else %}
                        <li class="list-group-item text-muted" id="member-list-empty">Brak innych członków.</li>
                    {% endif %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
            </div>
        </div>
    </div>
</div>
