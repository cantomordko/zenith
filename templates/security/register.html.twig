{% extends 'base.html.twig' %}

{% block title %}Rejestracja · Zenith{% endblock %}

{% block body %}
<div class="container auth-container py-5">
    <div class="row justify-content-center flex-grow-1">
        <div class="col-md-6 col-lg-5">
            <div class="auth-card p-4">
                <div class="mb-4 text-center">
                    <h1 class="h4 mb-2">Zenith · Rejestracja</h1>
                    <p class="mb-0 page-header-muted">Utwórz konto i zarządzaj swoimi tablicami</p>
                </div>

                {% if errors is not empty %}
                    <div class="alert alert-danger" role="alert">
                        <ul class="mb-0 ps-3">
                            {% for error in errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <form method="post" novalidate>
                    <div class="mb-3">
                        <label for="registerEmail" class="form-label">Adres e-mail</label>
                        <input
                            type="email"
                            name="email"
                            id="registerEmail"
                            class="form-control"
                            value="{{ data.email|default('') }}"
                            autocomplete="email"
                            required
                        >
                    </div>
                    <div class="mb-3">
                        <label for="registerDisplayName" class="form-label">Nazwa wyświetlana</label>
                        <input
                            type="text"
                            name="display_name"
                            id="registerDisplayName"
                            class="form-control"
                            value="{{ data.displayName|default('') }}"
                            autocomplete="name"
                            required
                        >
                    </div>
                    <div class="mb-3">
                        <label for="registerPassword" class="form-label">Hasło</label>
                        <input
                            type="password"
                            name="password"
                            id="registerPassword"
                            class="form-control"
                            autocomplete="new-password"
                            required
                        >
                        <div class="form-text text-muted">Minimum 8 znaków, zalecane litery i cyfry.</div>
                    </div>
                    <div class="mb-4">
                        <label for="registerPasswordConfirm" class="form-label">Powtórz hasło</label>
                        <input
                            type="password"
                            name="password_confirm"
                            id="registerPasswordConfirm"
                            class="form-control"
                            autocomplete="new-password"
                            required
                        >
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">
                    <button class="btn btn-primary w-100" type="submit">Załóż konto</button>
                </form>

                <p class="text-center small mt-4 mb-0">
                    Masz już konto? <a href="{{ path('app_login') }}">Wróć do logowania</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
